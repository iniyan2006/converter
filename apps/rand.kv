<Root>:
	image:image
	title :title
    text:text
    temp:temp
    windkm:windkm
    uv:uv
    humidity:humidity
    feel:feel
	BoxLayout:
		orientation: "vertical"
		Label:
			id: title
			text : "PokeDex"
			font_size: 64
			color: 0.92, 0.45, 0, 10
		AsyncImage:
			id: image
			size_hint_y: None
			source:None
			size : 100, 100
        Label:
            id : temp
            text : ''
            size_hint: 0.1 ,0.1
            pos_hint : {'center_x' : 0.500}
            font_size:15
            color: 0.92, 0.45, 0, 10
        Label:
            id : feel
            text : ''
            size_hint: 0.1 ,0.1
            pos_hint : {'center_x' : 0.500}
            font_size:15
            color: 0.92, 0.45, 0, 10
        Label:
            id : windkm
            text : ''
            size_hint: 0.1 ,0.1
            pos_hint : {'center_x' : 0.500}
            font_size:15
            color: 0.92, 0.45, 0, 10
        Label:
            id : uv
            text : ''
            size_hint: 0.1 ,0.1
            pos_hint : {'center_x' : 0.500}
            font_size:15
            color: 0.92, 0.45, 0, 10
        Label:
            id : humidity
            text : ''
            size_hint: 0.1 ,0.1
            pos_hint : {'center_x' : 0.500}
            font_size:15
            color: 0.92, 0.45, 0, 10
        TextInput:
            id: text
            size_hint : 0.2 ,0.2
            pos_hint : {'center_x' : 0.500}
            hint_text : "enter any city"
		Button:
			text: "Get Weather"
			font_size:20
			size_hint : 0.2,0.2
            pos_hint : {'center_x' : 0.500}
			color: 0.92, 0.45, 0, 10
			on_press : root.generate_pokemon()


